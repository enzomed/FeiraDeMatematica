import cv2
import random
import tkinter as tk

question = random.randint(1,2)


if question == 1:
    path = r'C:/Users/GUARULHOSNORTE-FRANC/Downloads/lol1.webp'
    ##O caminho depende do computador
    image = cv2.imread(path)
    window_name = 'Pergunta 1'
    cv2.imshow(window_name, image)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
elif question == 2:
    path = r'C:/Users/GUARULHOSNORTE-FRANC/Downloads/lol.jpg'
    image = cv2.imread(path)
    window_name = 'Pergunta 2'
    cv2.imshow(window_name,image)
    cv2.waitKey(0)
